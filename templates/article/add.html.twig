{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Ajouter un article{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="h4">Ajouter un article</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="form-group mb-3 col-md-6 col-sm-12">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article', 'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="form-group mb-3 col-md-6 col-sm-12">
                {{ form_label(form.slug, 'Slug', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.slug, {'attr': {'placeholder': 'Slug', 'class': 'form-control'}}) }}
                {{ form_errors(form.slug) }}
            </div>
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.introduction, 'Introduction', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.introduction, {'attr': {'placeholder': 'Introduction', 'class': 'form-control'}}) }}
            {{ form_errors(form.introduction) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': { 'class': 'form-control'}}) }}
            {{ form_errors(form.introduction) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.photo, 'Photo', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.photo) }}
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </div>


{% endblock %}
